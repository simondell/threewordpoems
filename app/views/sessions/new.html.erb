<%= form_for(:session, url: login_path) do |f| %>

	<%= f.label :email %>
	<%= f.email_field :email %>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<%= f.label :remember_me %>
	<%= f.check_box :remember_me %>

	<%= f.submit "Log in" %>
<% end %>

<p>New user? <%= link_to "Sign up now!", new_poet_path %></p>