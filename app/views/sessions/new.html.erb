<% provide(:page_title, 'Log in') %>
<%= form_for :session, url: login_path do |f| %>
  <h1>Come ye hither...</h1>
  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </p><p>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br />
    <%= link_to '(I forgot my password!)', new_password_reset_path %>
  </p><p>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, 'Remember me on this computer' %>
  </p>
  <p><%= f.submit 'Log me in!' %></p>

  <p><i>New poets, do <%= link_to 'sign up here!', signup_path %></i></p>
<% end %>
