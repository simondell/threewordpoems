<% provide(:page_title, 'Log in') %>
<div>
<%= form_for :session, url: login_path do |f| %>
  <h2>Come ye hither...</h2>
  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </p><p>
    <%= f.label :password %>
    <%= f.password_field :password %>
    (<%= link_to 'Forgot password?', new_password_reset_path %>)
  </p><p>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, 'Remember me on this computer' %>
  </p>
  <p><%= f.submit 'Log me in!' %></p>

  <p><i>New Poet? <%= link_to 'Sign up here', signup_path %></i></p>
<% end %>
</div>
