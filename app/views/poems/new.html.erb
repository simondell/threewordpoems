<%= provide(:page_title, 'Contribute a poem') %>
<%= form_for( @poem, html: { multipart: true } ) do |f| %>
  <h1>Contribute a poem</h1>
  <%= render 'shared/error_messages', object: f.object %>
  <p>
    <%= f.label :title, 'An optional title' %>
    <%= f.text_area :title, placeholder: 'Titles may be as long or as short as you like' %>
  </p><p>
    <%= f.label :content, 'Your poem here' %>
    <%= f.text_field :content, placeholder: 'Three words, carefully.' %>
  </p><p>
    <%= f.label :picture, 'Ideally, a photo (but don''t feel you must)' %>
    <%= f.file_field :picture, accept: 'image/gif,image/jpeg,image/png' %>
  </p>
  <p><%= f.submit 'I am done.' %></p>
<% end %>
