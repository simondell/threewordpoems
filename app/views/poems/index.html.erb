<h1>Listing poems</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Poet</th>
      <th>Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @poems.each do |poem| %>
      <tr class="<%= poem.colourway.name.downcase if poem.colourway.present? %>">
        <td><%= poem.title %></td>
        <td><%= poem.body %></td>
        <td><%= poem.poet_id %></td>
        <td>
          <% poem.categories.each_with_index do |cat, index| %>
            <%= link_to cat.name, poems_path(categorise_by: cat.name) %>
            <!-- <%= ', ' unless index === poem.categories.count - 1 %> -->
          <% end %>

        </td>
        <td><%= link_to 'Show', poem %></td>
        <td><%= link_to 'Edit', edit_poem_path(poem) %></td>
        <td><%= link_to 'Destroy', poem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Poem', new_poem_path %>
