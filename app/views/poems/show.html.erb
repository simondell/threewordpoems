<p id="notice"><%= notice %></p>
<article class="poem" role="main">
	<% if @poem.image_url %>
	<div class="poem__image"><%= image_tag @poem.image_url.to_s %></div>
	<% end %>

	<div class="poem__text">
		<% if @poem.title then %><h1 class="poem__title"><%= @poem.title %></h1><% end %>
		<p class="poem__body"><%= if @next_poem then link_to @poem.body, @next_poem else @poem.body end %></p>
		<footer>
			by <%= @poem.poet.display_name %> |
			<%= link_to 'Edit', edit_poem_path(@poem) %>
		</footer>
	</div>
</article>

<%= if @prev_poem then link_to 'Previous', @prev_poem end %>
<%= if @next_poem then link_to 'Next', @next_poem end %>
