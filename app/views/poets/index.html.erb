<h1>Listing poets</h1>

<table>
  <thead>
    <tr>
      <th>Display name</th>
      <th>Email</th>
      <th>Passwordhash</th>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @poets.each do |poet| %>
      <tr>
        <td><%= poet.display_name %></td>
        <td><%= poet.email %></td>
        <td><%= poet.passwordhash %></td>
        <td><%= poet.first_name %></td>
        <td><%= poet.last_name %></td>
        <td><%= link_to 'Show', poet %></td>
        <td><%= link_to 'Edit', edit_poet_path(poet) %></td>
        <td><%= link_to 'Destroy', poet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Poet', new_poet_path %>
