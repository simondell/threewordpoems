<%= form_for @poet,  html: { class: "poet" } do |f| %>

	<%= render 'shared/error_messages' %>

	<div class="field">
		<%= f.label :name, "name" %>
		<%= f.text_field :name, placeholder: "What's your name?" %>
	</div>

	<div class="field">
		<%= f.label :email, "email" %>
		<%= f.text_field :email, placeholder: "Your email, please" %>
	</div>

	<div class="field">
		<%= f.label :password, "Choose a password" %>
		<%= f.password_field :password %>
	</div>

	<div class="field">
		<%= f.label :password_confirmation, "Confirm your password" %>
		<%= f.password_field :password_confirmation %>
	</div>

	<div class="actions">
		<%= f.submit  "Do the thing!" %>
	</div>
<% end %>