<header>
  <p><%= link_to 'Three Word Poems', root_path %></p>
  <nav>
		<ol>
      <li><%= link_to 'Contribute', new_poem_path %></li>
    <% if logged_in? %>
      <li><%= link_to 'Account', current_poet %></li>
      <li><%= link_to 'Log out', logout_path, method: 'delete' %></li>
    <% else %>
      <li><%= link_to 'Log in', login_path %></li>
			<li><%= link_to	'Sign up', signup_path %></li>
    <% end %>
    </ol>

    <% if logged_in? && current_poet.editor? %>
    <ol>
      <li><%= link_to 'Moderate poems', editorial_poems_path %></li>
    </ol>
    <% end %>
  </nav>
</header>
