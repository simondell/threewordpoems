<header>
  <p><%= link_to 'Three Word Poems', root_path %></p>
  <nav>
		<ol>
    <% if logged_in? %>
      <li><%= link_to 'All poets', poets_path %></li>
      <li><%= link_to 'My poems', current_poet %></li>
      <li><%= link_to 'Settings', edit_poet_path(current_poet) %></li>
      <li><%= link_to 'Log out', logout_path, method: 'delete' %></li>
    <% else %>
			<li><%= link_to	'Sign up here', signup_path %>, or</li>
      <li><%= link_to 'Log in', login_path %></li>
    <% end %>
		</ol>
  </nav>
</header>
